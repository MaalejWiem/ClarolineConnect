{% extends "ClarolineCoreBundle:WorkspaceTag:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ "create_new_tag" | trans({}, "platform") }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-book',
                'name': 'workspaces'|trans({}, 'platform'),
                'href': path('claro_workspace_list')
            },
            {
                'name': 'my_workspaces'|trans({}, 'platform'),
                'href': path('claro_workspace_by_user', {'userId': user.getId()})
            },
            {
                'name': 'tags_management'|trans({}, 'platform'),
                'href': path('claro_workspace_manage_tag')
            },
            {
                'name': 'creation'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'create_new_tag'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-footer">
        <button id="form-workspace-tag-ok-btn" type="submit" class="btn btn-primary">
            {{ 'ok'|trans({}, 'platform') }}
        </button>
        <button id="form-cancel-btn" type="button" class="btn btn-default">
            {{ 'cancel'|trans({}, 'platform') }}
        </button>
    </div>
</form>
